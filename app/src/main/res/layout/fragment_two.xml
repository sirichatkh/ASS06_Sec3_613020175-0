                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="90dp"
                android:text="613020538-0"/>
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/male"
